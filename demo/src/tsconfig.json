{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "baseUrl": "./",
    "module": "ESNext",
    "types": ["webpack"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "ngx-tethys": ["../../src/public-api"],
      "ngx-tethys/*": ["../../src/*"]
    }
  },
  "angularCompilerOptions": {
    "skipLibCheck": true
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
